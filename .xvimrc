set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

set ignorecase
set smartcase
set incsearch
set hlsearch

set cmdheight=2

nnoremap H 0
vnoremap H 0
nnoremap L $
vnoremap L $

" Switch between tabs
noremap <Space>1 1gt
noremap <Space>2 2gt
noremap <Space>3 3gt
noremap <Space>4 4gt
noremap <Space>5 5gt
noremap <Space>6 6gt
noremap <Space>7 7gt
noremap <Space>8 8gt
noremap <Space>9 9gt

" Easily create a new tab.
noremap <Space>tN :tabnew<CR>
" Easily close a tab.
noremap <Space>tc :tabclose<CR>
" Easily go to next tab.
noremap <Space>tn :xccmd selectNextTab<CR>
" Easily go to previous tab.
noremap <Space>tp :xccmd selectPreviousTab<CR>

" Search for the selected string
vnoremap <Space>g :xccmd findSelectedTextInWorkspace<CR>

